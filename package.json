{
  "name": "project-timer",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json",
    "electron:dev": "concurrently \"vite\" \"cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:build": "yarn build && electron-builder"
  },
  "devDependencies": {
    "@jhubbardsf/svelte-sortablejs": "^1.1.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-squirrel-startup": "^1.0.1",
    "postcss": "^8.4.49",
    "svelte": "^5.0.3",
    "svelte-check": "^4.0.5",
    "tailwindcss": "^3.4.16",
    "tslib": "^2.8.0",
    "typescript": "~5.6.2",
    "vite": "^5.4.9",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "dependencies": {
    "@yegorvk/node-vcam": "https://github.com/yegorvk/node-vcam"
  },
  "build": {
    "appId": "com.my-svelte-app.app",
    "productName": "My Svelte App",
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js"
    ],
    "directories": {
      "output": "release"
    }
  }
}
